<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="@drawable/texturedbackground">
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp" android:id="@+id/top1">

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/top_title_bar" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/navbar1" android:id="@+id/top2">

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            layout="@layout/top_menu" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/texturedbackground"
        android:divider="#E9D2AD" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Customer Care"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#50341E" />

        <Button
            android:id="@+id/emailButton"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_alignLeft="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/morecornerstop"
            android:gravity="left|center_vertical"
            android:paddingLeft="15dp"
            android:text="Feedback &amp; Suggestions"
            android:textColor="#000000" />

        <Button
            android:id="@+id/smsButton"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/emailButton"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/morecornersbottom"
            android:gravity="left|center_vertical"
            android:paddingLeft="15dp"
            android:text="Complaints"
            android:textColor="#000000" android:visibility="visible"/>

        <Button
            android:id="@+id/Button02"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/language"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/morecorners"
            android:gravity="left|center_vertical"
            android:paddingLeft="15dp"
            android:text="English"
            android:textColor="#000000" />

        <Button
            android:id="@+id/Button04"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/Button03"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/morecornersbottom"
            android:gravity="left|center_vertical"
            android:paddingLeft="15dp"
            android:text="Developer"
            android:textColor="#000000" android:visibility="gone"/>

        <TextView
            android:id="@+id/language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/smsButton"
            android:layout_below="@+id/smsButton"
            android:layout_marginTop="10dp"
            android:text="Language"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#50341E" />

        <Button
            android:id="@+id/Button03"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/about"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/morecornerstop"
            android:gravity="left|center_vertical"
            android:paddingLeft="15dp"
            android:text="App Version"
            android:textColor="#000000" android:visibility="gone"/>

        <TextView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Button04"
            android:layout_below="@+id/Button02"
            android:layout_marginTop="10dp"
            android:text="About"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#50341E" android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignRight="@+id/emailButton" style="?android:attr/progressBarStyleInverse" android:layout_centerVertical="false" android:layout_alignParentTop="false" android:layout_below="@+id/emailButton" android:layout_centerInParent="false" android:layout_marginTop="8dp" android:layout_marginRight="5dp"/>

    </RelativeLayout>
   
</LinearLayout>