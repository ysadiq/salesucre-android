<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_element"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:background="#505561">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Which number?"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/button1"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:autoLink="phone"
            android:background="@drawable/roundedbuttonblue"
            android:text="000-000-0000" android:textColor="#FFFFFF" android:textSize="20dp" android:textColorLink="#FFFFFF"/>

        <Button
            android:id="@+id/Button01"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/button1"
            android:layout_below="@+id/button1"
            android:layout_marginTop="25dp"
            android:autoLink="phone"
            android:background="@drawable/roundedbuttonblue"
            android:text="000-000-0000" android:textColor="#ffffff" android:textSize="20dp" android:textColorLink="#ffffff"/>

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/Button01"
            android:layout_below="@+id/Button01"
            android:layout_marginTop="55dp"
            android:background="@drawable/roundedbuttonblue"
            android:text="Cancel" android:textColor="#FFFFFF" android:textSize="20dp"/>

    </RelativeLayout>

</LinearLayout>